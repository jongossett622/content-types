{
    "$schema": "http://json-schema.org/schema#",
    "id": "http://schema.cms.amplience.com/{{self.id}}",
    "meta": {
        "name": "Image Slide JPG2",
        "description": "A Slide to be used in a container",
        "context": "http://context.cms.amplience.com/{{self.context.id}}",
        "icons": [
            {
                "size": 512,
                "url": "//i1.adis.ws/i/ampevalmaster/Image_Slide_JPG.png?w=512"
            }
        ],
        "card": {
            "uri": "//apps.dev-artifacts.adis.ws/cms-cards/master/latest/summary/index.html",
            "mapping": {
                "headline": "/textBlock/headline",
                "sub": "/textBlock/strapline",
                "image": "/imageBlock/image"
            }
        }
    },
    "allOf": [
        {
            "$ref": "#/definitions/self"
        },
        {
            "$ref": "http://schema.system.cms.amplience.com/v0.0#/content-base"
        }
    ],
    "definitions": {
        "self": {
            "type": "object",
            "properties": {
                "imageBlock": {
                    "type": "object",
                    "$ref": "http://schema.cms.amplience.com/{{demo-01-image-block.id}}",
                    "_semanticType": "http://semantic-type.cms.amplience.com/content",
                    "_interpolate": true,
                    "_label": {
                        "value": "Image",
                        "hint": ""
                    }
                },
                "textBlock": {
                    "type": "object",
                    "$ref": "http://schema.cms.amplience.com/{{demo-01-text-block.id}}",
                    "_semanticType": "http://semantic-type.cms.amplience.com/content",
                    "_interpolate": true,
                    "_label": {
                        "value": "Text",
                        "hint": ""
                    }
                },
                "link": {
                    "type": "object",
                    "$ref": "http://schema.cms.amplience.com/{{demo-01-link.id}}",
                    "_semanticType": "http://semantic-type.cms.amplience.com/content",
                    "_interpolate": true,
                    "_label": {
                        "value": "Link for this screen",
                        "hint": ""
                    }
                },
                "priority": {
                    "type": "string",
                    "enum": [
                        "high",
                        "normal"
                    ],
                    "_label": {
                        "value": "Priority of item",
                        "hint": "Used in a grid to determine large / small items"
                    },
                    "_semanticType": "http://semantic-type.cms.amplience.com/enum"
                }
            },
            "required": []
        }
    }
}