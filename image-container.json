{
    "$schema": "http://json-schema.org/schema#",
    "id": "http://schema.cms.amplience.com/{{self.id}}",
    "meta": {
        "name": "Image Carousel-Grid Container JPG",
        "description": "A container for slides",
        "context": "http://context.cms.amplience.com/{{self.context.id}}",
        "icons": [
            {
                "size": 512,
                "url": "//i1.adis.ws/i/ampevalmaster/image_carousel-grid_container.png?w=512"
            }
        ],
        "card": [
            {
                "id": "defaultcard",
                "category": "card",
                "default": true,
                "label": "Default Card",
                "uri": "//apps.dev-artifacts.adis.ws/cms-cards/master/latest/gallery/index.html",
                "mapping": {
                    "headline": "/_title",
                    "image0": "/screen/0/imageBlock/image",
                    "image1": "/screen/1/imageBlock/image",
                    "image2": "/screen/2/imageBlock/image",
                    "image3": "/screen/3/imageBlock/image"
                }
            },
            {
                "id": "gridvis",
                "category": "visualization",
                "default": false,
                "label": "Grid Visualization",
                "uri": "//dev-solutions.s3.amazonaws.com/demos/demo_01/visualisation/grid/index.html"
            },
            {
                "id": "defaultviz",
                "category": "visualization",
                "default": true,
                "label": "Carousel-Banner Visualization",
                "uri": "//dev-solutions.s3.amazonaws.com/demos/demo_01/visualisation/carousel/index.html"
            }
        ]
    },
    "allOf": [
        {
            "$ref": "#/definitions/self"
        },
        {
            "$ref": "http://schema.system.cms.amplience.com/v0.0#/content-base"
        }
    ],
    "definitions": {
        "self": {
            "type": "object",
            "properties": {
                "screen": {
                    "type": "array",
                    "items": {
                        "allOf": [
                            {
                                "$ref": "http://schema.system.cms.amplience.com/v0.0#/content-link"
                            },
                            {
                                "properties": {
                                    "@type": {
                                        "enum": [
                                            "http://schema.cms.amplience.com/{{image-slide.id}}"
                                        ]
                                    }
                                }
                            }
                        ],
                        "_semanticType": "http://semantic-type.cms.amplience.com/content"
                    },
                    "minItems": 1,
                    "maxItems": 15,
                    "_label": {
                        "value": "Screens",
                        "hint": ""
                    },
                    "_semanticType": "http://semantic-type.cms.amplience.com/list"
                }
            },
            "required": []
        }
    }
}