            "title": "Image",
            "description": ""
        },
        "imageAltText": {
            "type": "string",
            "minLength": 0,
            "maxLength": 50,
            "title": "Image alt text",
            "description": ""
        },
        "transformationTemplates": {
            "type": "array",
            "items": {
                "allOf": [
                    {
                        "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content-link"
