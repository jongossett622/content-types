        "category": {
            "type": "array",
            "maxItems": 1,
            "items": {
                "allOf": [
                    {
                        "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content-link"
                    },
                    {
                        "properties": {
                            "contentType": {
                                "enum": [
                                    "https://www.ping.com/configurator-product-category.json"
                                ]
                            }
                        }
                    }
                ]
            },
            "title": "Product Category",
            "description": ""
        },
        "images": {
            "type": "array",
            "items": {
                "allOf": [
                    {
                        "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content-link"
                    },
                    {
                        "properties": {
                            "contentType": {
                                "enum": [
                                    "https://www.ping.com/configurator-svg-link.json"
                                ]
                            }
                        }
                    }
                ]
            },
            "title": "Images for Carousel",
            "description": ""
        },
        "options": {
            "type": "array",
            "items": {
                "allOf": [
                    {
                        "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content-link"
                    },
                    {
                        "properties": {
                            "contentType": {
                                "enum": [
                                    "https://www.ping.com/configurator-option.json"
                                ]
                            }
                        }
                    }
                ]
            },
            "title": "Options",
            "description": ""
