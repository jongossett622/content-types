        "instruction": {
            "type": "array",
            "maxItems": 1,
            "items": {
                "allOf": [
                    {
                        "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content-link"
                    },
                    {
                        "properties": {
                            "contentType": {
                                "enum": [
                                    "https://www.ping.com/configurator-tooltip.json"
                                ]
                            }
                        }
                    }
                ]
            },
            "title": "Tooltip",
            "description": ""
        }
